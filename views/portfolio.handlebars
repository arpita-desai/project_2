<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>$ {{total}}</h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>      
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- AREA CHART -->
        <div class="card card-primary">
          {{!-- <div class="card-header">
            <h3 class="card-title">Area Chart</h3>
          </div> --}}
          <div class="card-body">
            <div class="chart">
              {{>chart}}
            </div>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col (LEFT) -->
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Stock Price</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Symbol</th>
                  <th>Current Price</th>
                  <th>Shares</th>
                  <th>Current Values</th>
                  <!-- <th><i class="fa fa-arrow-up" aria-hidden="true"></i>/<i class="fa fa-arrow-down" aria-hidden="true"></i></th> -->
                </tr>
              </thead>
              {{>table}}
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col (RIGHT) -->
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
