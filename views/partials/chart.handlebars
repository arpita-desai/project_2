<script>
	var chartInfo = JSON.parse({{{json chartInfo}}});
	console.log(chartInfo);
	var ctx = document.getElementById('canvas').getContext('2d');
	var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'line',
    // The data for our dataset
